<!DOCTYPE html>
<html>

<head>
    <%- include ('partials/meta') %>
        <title>
            <%= title %>
        </title>
        <!-- <link rel='stylesheet' href='/stylesheets/style.css' /> -->
</head>

<body>
    <%- include('partials/navbar-profile.ejs') %>
    <h1>Employement List</h1>
    <br>
    <br>
    <div class="container">
  <table class="table table-bordered">
      <thead>
        <tr>
          <th scope="col">No.</th>
          <th scope="col">name</th>
          <th scope="col">group</th>
          <th scope="col">email</th>
          <th scope="col">action</th>
        </tr>
      </thead>
      <tbody>
          <% data.forEach((user,index) => { %>
        <tr>
          <th scope="row"><%= index+1 %> </th>
          <td> <%= user.name%>  </td>
          <td> <%= user.group%> </td>
          <td> <%= user.email%> </td>
          <td> 
              <a href="/user/details?name=<%= user.name %> "><button class="btn btn-primary" type="button">Details</button></a>
              <a href="/user/edit?name=<%= user.name %> "><button class="btn btn-primary btn-warning" type="button">Update</button></a>
              <a href="/user/erase?name=<%= user.name %> "><button class="btn btn-primary btn-danger" type="button">Delete</button></a>
          </td>
        </tr>
        <%}); %> 
      </tbody>
    </table>
</body>

</html>